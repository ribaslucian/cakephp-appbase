<div class="centered" file="{id}" style="display: block; border: none; border-bottom: 1px solid #eee;">
    <div class="block jq_id_mup_mini">
        .{extension}
    </div>

    <div class="block">
        <div class="small text b" style="margin: 15px;">
            {name}
            <div class="small text">{size} MB</div>
        </div>
    </div>

    <i class="icon trash mup_remove link basic large" title="Remover este arquivo." onclick="mup.remove_file({id})"></i>
</div>